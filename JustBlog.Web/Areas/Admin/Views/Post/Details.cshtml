@{
}
@model PostDetailsViewModel

<div class="container p-4">
    <div>
        <h1 class="text-primary text-decoration-none">
            @Html.PostLink(Model.Title, Model.PostedOn.Year, Model.PostedOn.Month, Model.UrlSlug)
        </h1>
        <div>
            @Html.CategoryLink(Model.Category.Name, Model.Category.UrlSlug)
        </div>

        <div>
            @Html.Partial("Component/_PopularTagsPartial", Model.Tags)
        </div>

        <p>Posted @Model.PostedOn.FriendlyFormat() with rate @Model.Rate by @Model.ViewCount view(s)</p>
        <strong>Short Description</strong>
        <p>@Html.Raw(Model.ShortDescription)</p>
        <hr>
        <strong>Content</strong>
        <div>@Html.Raw(Model.PostContent)</div>
        <hr>
    </div>
    <div class="row p-2">
        <a class="btn btn-warning" href="/Admin/Post/Edit/@Model.Id" style="width: 75px;">Edit</a>
        <a type="button" class="btn btn-secondary ms-1" href="/Admin/Post" style="width: 75px;">Back</a>
    </div>

</div>