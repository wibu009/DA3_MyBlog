@{
}

@model TagDetailsViewModel

<div class="container p-4">
    <h3>Tag details</h3>
    <hr/>
    <div class="row">
        <p><b>Id:</b> @Model.Id</p>
    </div>
    <div class="row">
        <p><b>Name:</b> @Model.Name</p>
    </div>
    <div class="row">
        <p><b>Slug:</b> @Model.UrlSlug</p>
    </div>
    <div class="row">
        <p><b>Description:</b> @Html.Raw(Model.Description)</p>
    </div>
    <div class="row">
        <p><b>Count:</b> @Model.Count</p>
    </div>
    <div class="row">
        <a type="button" class="btn btn-warning" href="/Admin/Tag/Edit/@Model.Id" style="width: 75px;">Edit</a>
        <a type="button" class="btn btn-secondary ms-1" href="/Admin/Tag" style="width: 75px;">Back</a>
    </div>
</div>