@{
}
@model IList<CommentViewModel>
@if (Model.Count == 0)
{
    <h3>There are no comments</h3>
}
else
{
    @foreach (var comment in Model)
    {
        <div class="border mb-2 p-2 post-preview">
            <h6>@comment.CommentHeader</h6>
            <p class="m-0 mt-1 mb-1">@comment.CommentText</p>
            <p class="m-0 post-meta">@comment.Name (@comment.Email) Commented @comment.CommentTime.FriendlyFormat()</p>
        </div>
    }
}